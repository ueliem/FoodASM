doctype html
html(ng-app="fasmApp")
  head
    title #{title} - FASM
    link(rel='stylesheet', href='/css/style.css')
  body
    header
      h1 FASM
    .container
      .main-content(ng-controller="SearchController")
        br
        form
          table
            tr
            td
              //select
                option plan a meal...
                option breakfast
                option brunch
                option lunch
                option dinner
              br
              input(type="text" placeholder="Enter an ingredient..." ng-model="cur_search").searchbox
              br
              br
              input(type="submit" ng-click="get_recipes_by_ingredients(cur_search)")
              br
              br
          footer
            br
            | By Will and Dan Long
    script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.15/angular.min.js")
    script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.15/angular-route.js")
    script(type="text/javascript" src="js/controllers.js")
    script(type="text/javascript" src="js/app.js")
    script(type="text/javascript" src="js/services.js")
